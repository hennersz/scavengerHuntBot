{
  "env": {
      "es6": true,
      "node": true,
      "commonjs": true,
      "jest": true,
      "jest/globals": true
  },
  "extends": [
      "google",
      "eslint:recommended",
      "plugin:prettier/recommended"
  ],
  "parserOptions": {
      "ecmaVersion": 2018
  },
  "plugins": ["prettier", "jest"],
  "rules": {
      "prettier/prettier": "error",
      "no-console":"off",
      "no-var": "error",
      "max-len": [2, {"code": 140, "tabWidth": 2, "ignoreUrls": true}]
  }
}